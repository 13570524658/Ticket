<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackground">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/sy_banner"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/px_50"
            android:paddingRight="@dimen/px_50"
            android:paddingTop="@dimen/px_50"
            android:paddingBottom="@dimen/px_30"
            android:background="@color/white"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/llDeliveryManager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sy_ps"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/px_24"
                    android:layout_marginTop="@dimen/px_10"
                    android:textColor="@color/colorHomeText"
                    android:text="@string/delivery_manager"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llSetUpData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sy_jd"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/px_24"
                    android:layout_marginTop="@dimen/px_10"
                    android:textColor="@color/colorHomeText"
                    android:text="@string/set_up_data"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/llCheckCustomer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/sy_jc"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/px_24"
                    android:layout_marginTop="@dimen/px_10"
                    android:textColor="@color/colorHomeText"
                    android:text="@string/check_customer"/>
            </LinearLayout>
        </RelativeLayout>
