<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:id="@+id/ll_titel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_50"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="@color/bk_grays">

            <TextView
                android:id="@+id/task_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已交付气瓶数量:"
                android:layout_marginLeft="@dimen/px_30"
                android:textColor="@color/black"
                android:textSize="@dimen/px_26"
                android:layout_gravity="center" />
            <TextView
                android:id="@+id/tv_jfGasTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_gravity="center"
                android:textSize="@dimen/px_26"
                android:textColor="@color/black"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginTop="@dimen/px_30">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:background="@color/table"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/px_2"
                android:layout_height="match_parent"
                android:background="@color/table"/>
            <TextView
                android:id="@+id/tv_jfGasLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/px_5"
                android:textColor="@color/black"
                android:text="气瓶标签"
                android:textSize="@dimen/px_26"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="@dimen/px_2"
                android:layout_height="match_parent"
                android:background="@color/table"/>
            <TextView
                android:id="@+id/tv_jsGasModule"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/px_5"
                android:textColor="@color/black"
                android:textSize="@dimen/px_26"
                android:text="气瓶规格"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="@dimen/px_2"
                android:layout_height="match_parent"
                android:background="@color/table"/>
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_jfGas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>