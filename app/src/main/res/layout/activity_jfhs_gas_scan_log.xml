<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">
        <android.support.v7.widget.Toolbar
            android:id="@+id/mToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/AppColor"
            app:popupTheme="@style/AppTheme"
            app:contentInsetStart="0dp"
            app:title="@string/app_name">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_98">

                    <LinearLayout
                        android:id="@+id/ll_ibtnBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ibtnBack"
                            android:layout_width="@dimen/px_70"
                            android:layout_height="@dimen/px_50"
                            android:layout_alignParentLeft="true"
                            android:background="@android:color/transparent"
                            android:src="@mipmap/but_fh"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_toRightOf="@+id/ibtnBack"
                            android:text="@string/back_btn"
                            android:textColor="@color/TitelTextColor"
                            android:textSize="@dimen/textSize_18" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/ToolbarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/gas_msgs"
                        android:textColor="@color/TitelTextColor"
                        android:textSize="@dimen/text_size_18" />

                    <ImageButton
                        android:layout_width="@dimen/px_100"
                        android:layout_height="@dimen/px_100"
                        android:layout_alignParentRight="true"
                        android:background="@android:color/transparent"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:id="@+id/llgasTotalTips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/px_15"
        android:paddingBottom="@dimen/px_15"
        android:orientation="horizontal"
        android:visibility="gone"
        android:background="@color/gray">
        <TextView
            android:id="@+id/tv_gasTotalTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="气瓶数量:"
            android:textColor="@color/black"
            android:textSize="@dimen/px_26"
            android:layout_marginLeft="@dimen/px_30"
            />
        <TextView
            android:id="@+id/tv_gasTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/px_26"
            android:text=""
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:layout_marginLeft="@dimen/px_30"
        android:layout_marginRight="@dimen/px_30"
        android:layout_marginTop="@dimen/px_50">
        <TextView
            android:id="@+id/tv_line_top"
            android:layout_width="match_parent"
            android:layout_height="@dimen/px_2"
            android:background="@color/table"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="@dimen/px_2"
                android:layout_height="match_parent"
                android:background="@color/table"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="气瓶标签"
                android:textColor="@color/black"
                android:paddingTop="@dimen/px_10"
                android:paddingBottom="@dimen/px_10"
                android:textSize="@dimen/px_26"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="@dimen/px_2"
                android:layout_height="match_parent"
                android:background="@color/table"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="气瓶规格"
                android:textSize="@dimen/px_26"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="@dimen/px_2"
                android:layout_height="match_parent"
                android:background="@color/table"
                />
        </LinearLayout>
    </LinearLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_gasInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>