<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="@dimen/px_60">
        <ImageView
            android:id="@+id/ivDot1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/punctuation_one"
            android:layout_marginRight="@dimen/px_4"/>
        <ImageView
            android:id="@+id/ivDot2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/punctuation_two"
            android:layout_marginLeft="@dimen/px_4"
            android:layout_marginRight="@dimen/px_4"/>
        <ImageView
            android:id="@+id/ivDot3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/punctuation_two"
            android:layout_marginLeft="@dimen/px_4" />
        <ImageView
            android:id="@+id/ivDot4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/punctuation_two"
            android:layout_marginLeft="@dimen/px_4" />
    </LinearLayout>
</FrameLayout>