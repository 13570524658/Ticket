<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:elevation="0dp">

        <android.support.v7.widget.Toolbar
            android:id="@+id/mToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/AppColor"
            app:contentInsetStart="0dp"
            app:popupTheme="@style/AppTheme"
            app:title="@string/app_name">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_98">

                    <LinearLayout
                        android:id="@+id/ll_ibtnBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/ibtnBack"
                            android:layout_width="@dimen/px_70"
                            android:layout_height="@dimen/px_50"
                            android:layout_alignParentLeft="true"
                            android:background="@android:color/transparent"
                            android:src="@mipmap/but_fh"
                            android:visibility="visible" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_toRightOf="@+id/ibtnBack"
                            android:text="@string/back_btn"
                            android:textColor="@color/TitelTextColor"
                            android:textSize="@dimen/textSize_18" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/ToolbarTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/by_putting"
                        android:textColor="@color/TitelTextColor"
                        android:textSize="@dimen/text_size_18" />

                    <ImageButton
                        android:id="@+id/ibtn_setting"
                        android:layout_width="@dimen/px_100"
                        android:layout_height="@dimen/px_100"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/sousu"
                        android:background="@android:color/transparent"/>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.Toolbar>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/llSearch"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_100"
                    android:background="@color/white"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvSearch"
                        android:layout_width="@dimen/px_100"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary"
                        android:text="@string/search"
                        android:background="@drawable/bg_white_list_item"
                        android:textSize="@dimen/text_size_14" />
                    <View
                        android:layout_width="@dimen/px_1"
                        android:layout_height="match_parent"
                        android:layout_toLeftOf="@id/tvSearch"
                        android:background="@color/colorLine"/>
                    <ImageView
                        android:id="@+id/ivSearch"
                        android:layout_width="@dimen/px_40"
                        android:layout_height="@dimen/px_40"
                        android:layout_marginLeft="@dimen/px_30"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/header_icon_search_gray"
                        android:layout_marginRight="@dimen/px_20"/>

                    <EditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/px_55"
                        android:layout_toRightOf="@id/ivSearch"
                        android:layout_toLeftOf="@id/tvSearch"
                        android:layout_marginRight="@dimen/px_30"
                        android:hint="气瓶标签/企业钢码"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/px_26"
                        android:singleLine="true"
                        android:gravity="center_vertical"
                        android:imeOptions="actionSearch"
                        android:background="@null"/>

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_1"
                    android:background="@color/colorLine"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.design.widget.AppBarLayout>
<LinearLayout
    android:id="@+id/ll_titel"
    android:layout_width="match_parent"
    android:layout_height="@dimen/px_80"
    android:orientation="horizontal"
    android:visibility="gone"
    android:background="@color/bk_grays">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="气瓶档案数量:"
        android:textSize="@dimen/px_26"
        android:layout_marginLeft="@dimen/px_30"
        android:textColor="@color/black"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/tv_Total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/px_26"
        android:layout_marginLeft="@dimen/px_30"
        android:textColor="@color/black"
        android:layout_gravity="center"/>
</LinearLayout>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/xrv_inputLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </com.jcodecraeer.xrecyclerview.XRecyclerView>
</LinearLayout>