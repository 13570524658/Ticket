<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fdcf42">
    <ImageView
        android:id="@+id/iv_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/qidy_bg_four">
    </ImageView>
    <ImageView
        android:id="@+id/iv_bottom"
        android:layout_below="@+id/iv_top"
        android:layout_marginTop="@dimen/px_50"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/qidy_test_four"/>
    <TextView
        android:id="@+id/tvUseNow"
        android:layout_below="@+id/iv_bottom"
        android:layout_width="@dimen/px_300"
        android:layout_height="@dimen/px_80"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/px_30"
        android:background="@drawable/bg_btn_use_now"
        android:text="立即体验"/>
</RelativeLayout>