<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_adapter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/px_30">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginLeft="@dimen/px_30">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="配送任务编号:"
             android:textColor="@color/black"
             android:textSize="@dimen/px_26"/>
         <TextView
             android:id="@+id/tv_transoprtTaskID"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="wrap_content"
             android:textColor="@color/colorPrimary"
             android:layout_marginLeft="@dimen/px_30"
             android:textSize="@dimen/px_26"/>
         <TextView
             android:id="@+id/tv_status"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginRight="@dimen/px_26"
             android:text="已发货"
             android:textColor="@color/red"/>
     </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginTop="@dimen/px_30">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_26"
                android:textColor="@color/black"
                android:text="关联订单编号:"/>
            <TextView
                android:id="@+id/tv_orderID"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_30"
                android:textSize="@dimen/px_26"
                android:textColor="@color/colorPrimary"/>

        </LinearLayout>
                 <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                     android:layout_marginLeft="@dimen/px_30"
                android:layout_marginTop="@dimen/px_30">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/px_26"
                    android:textColor="@color/black"
                    android:text="下单时间:"/>
                <TextView
                    android:id="@+id/tv_orderTime"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/px_30"
                    android:textSize="@dimen/px_26"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginTop="@dimen/px_30">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_26"
                android:textColor="@color/black"
                android:text="客户地址:"/>
            <TextView
                android:id="@+id/tv_customerAddress"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_26"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginTop="@dimen/px_30">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_26"
                android:textColor="@color/black"
                android:text="联系电话:"/>
            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_26"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginTop="@dimen/px_30">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_26"
                android:textColor="@color/black"
                android:text="交付情况:"/>
            <TextView
                android:id="@+id/tv_jfData"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/px_26"
                android:layout_marginLeft="@dimen/px_30"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/px_30"
            android:layout_marginTop="@dimen/px_30">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/px_26"
                android:textColor="@color/black"
                android:text="回收情况:"/>
            <TextView
                android:id="@+id/tv_hsData"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/px_30"
                android:textSize="@dimen/px_26"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>
        </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/px_30"
    android:layout_marginTop="@dimen/px_30"
    android:background="@color/bk_grays">

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_jf"
        android:layout_width="@dimen/px_180"
        android:layout_height="@dimen/px_80"
        android:text="交付"
        android:textSize="@dimen/px_30"
        android:gravity="center"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn_use_now"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="0.5"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_hs"
        android:layout_width="@dimen/px_180"
        android:layout_height="@dimen/px_80"
        android:text="回收"
        android:gravity="center"
        android:textSize="@dimen/px_30"
        android:textColor="@color/white"
        android:background="@drawable/bg_btn_use_now"/>

    <TextView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />
</LinearLayout>
    </LinearLayout>


</LinearLayout>